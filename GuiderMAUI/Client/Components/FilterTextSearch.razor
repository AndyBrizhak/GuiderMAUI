<div class="search-bar">
    <div class="input-group">
        <input type="text"
               @bind="searchTerm"
               @bind:event="oninput"
               @onkeydown="HandleEnter"
               placeholder="Search places..."
               class="form-control" />

        @* Кнопка очистки (Крестик) *@
        @if (!string.IsNullOrEmpty(searchTerm))
        {
            <button class="btn-clear" @onclick="ClearSearch" type="button">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        }

        @* Кнопка поиска (Лупа) *@
        <button class="btn-search" @onclick="TriggerSearch">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="11" cy="11" r="8"></circle>
                <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
        </button>
    </div>
</div>

@code {
    // Входящий параметр: текущее значение из URL (приходит от родителя)
    [Parameter] public string? InitialValue { get; set; }

    // Событие: сообщает родителю, что нужно начать поиск
    [Parameter] public EventCallback<string?> OnSearch { get; set; }

    private string searchTerm = "";

    protected override void OnInitialized()
    {
        searchTerm = InitialValue ?? "";
    }

    // Обработка Enter
    private async Task HandleEnter(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await TriggerSearch();
        }
    }

    // Очистка
    private async Task ClearSearch()
    {
        searchTerm = "";
        // Передаем null, чтобы родитель удалил параметр Q
        await OnSearch.InvokeAsync(null);
    }

    // Нажатие на лупу или Enter
    private async Task TriggerSearch()
    {
        // Если пусто - передаем null, иначе строку
        var valueToSend = string.IsNullOrWhiteSpace(searchTerm) ? null : searchTerm;
        await OnSearch.InvokeAsync(valueToSend);
    }
}