@namespace GuiderMAUI.Client.Components.PlaceDetailsComponents

@if (Images != null && Images.Any())
{
    <div class="gallery-section">
        @* tabindex="0" -> Делает div доступным для фокуса.
           Теперь можно кликнуть по галерее и листать СТРЕЛКАМИ на клавиатуре.
        *@
        <div class="gallery-scroll" tabindex="0" aria-label="Image gallery">
            @foreach (var img in Images)
            {
                <div class="gallery-item">
                    @* Используем Name для alt-текста, если передано *@
                    <img src="@img" alt="@(Name ?? "Place image")" loading="lazy" />
                </div>
            }
        </div>
    </div>
}

@code {
    [Parameter]
    public List<string>? Images { get; set; }

    [Parameter]
    public string? Name { get; set; }
}